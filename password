
def parola_kont(parola):
    import re
    if len(parola)<5:
        raise Exception("girdiğiniz parola en az 4 karakter olmalıdır.")
    elif not re.search("[a-z]",parola):
        raise Exception("girdiğiniz parola küçük harf içermelidir.")
    elif not re.search("[A-Z]",parola):
        raise Exception("girdiğiniz parola büyük harf içermelidir.")
    elif not re.search("[0-9]",parola):
        raise Exception("girdiğiniz parola rakam içermelidir.")
    elif not re.search("[_@]",parola):
        raise Exception("girdiğiniz parola _ veya @ içermelidir.")  
    elif re.search("\s",parola):
        raise Exception ("parola boşluk içermemeli")
    else:
        print("geçerli parola")

password=str(input("parola gir: "))
try:
    parola_kont(password)
except Exception as hata:
    print(hata)
