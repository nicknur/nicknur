hesapno=int(input("hesap numaranı yaz:  "))
sifre= int(input("hesap şifreni yaz:  "))

ad="ali"
kullanıcıno= 2580
kullanıcısifre= 4545
bakiye=3000
ek_hesap=2000

if hesapno==kullanıcıno and sifre== kullanıcısifre:
    print("hosgeldiniz bilgileriniz geliyor")
    miktar=int(input("çekmek istediğin miktar :"))
    def tutar(bakiye,miktar):
        print(f"merhaba {ad}")
        bakiye-=miktar
        if miktar<=bakiye:
            print(f"çekmek istediğiniz{miktar}, {tutar}ında gerçekleşti")
        else:
            ekhesapekleme=input("ek hesaba geçmek ister misin?e/h  ")
            toplam=bakiye+ek_hesap
            if ekhesapekleme=="e":
                print("devam ediliyor")
                if toplam>=miktar:
                    print("çekim başarılı")
                else:
                    print("hesapta yeterli bakiye bulunamadı")
            else:
                print("iyi günler dileriz")

    tutar(hesapno,miktar)
else:
    print("bilgileriniz yanlış")
