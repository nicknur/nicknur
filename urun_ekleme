urunler=[]
adet=int(input("kaç adet ürün eklemek istiyosunuz? "))
i=0
while i<adet:
    name= input("ürünün adı: ")
    price= input("ürünün fiyatı: ")
    urunler.append({
        "name": name,
        "price": price
    })
    i+=1

for urun in urunler:
    print(f'ürün adı: {urun["name"]} ürünün fiyatı :{urun["price"]}')
