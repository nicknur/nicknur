name=input("isminizi girin: ")
password=input("şifrenizi girin: ")

işhesap={
    "ad":name,
    "hesapno":11,
    "bakiye":3000,
    "ekhesap":2000,
    "password":1234
}
if password== "1234":
    print("hoşgeldiniz...")



    def paracek(hesap,miktar):
        print(f"merhaba {işhesap['ad']}")
        

        if (işhesap["bakiye"]>= miktar):
            işhesap["bakiye"]-=miktar
            print("paarnızı alabilirsiniz")
        else:
            toplam= işhesap['bakiye']+ işhesap['ekhesap']
            if (toplam>= miktar):
                ekhesapkullanimi=input("ek hesap kullanılsın mı yes?/no?")
                if ekhesapkullanimi=="yes":
                    print("paranızı alabilirsiniz")
                else:
                    print(f"{hesap['hesap no']} nolu hesabınızda {hesap['bakiye']} bulunmaktadır.")
            else:
                print("üzgünüz bakiye yetersiz")
    paracek(name,6000)

else :
    print("parola veya kullnaıcı adını yanlış girdiniz tekrar deneyiniz.")
