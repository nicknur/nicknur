import smtplib
from email.mime.multipart import MIMEMultipart
from email.mime.text import MIMEText
import sys
mesaj= MIMEMultipart()

mesaj["From"]= "...@gmail.com"
alıcı= ["...@gmail.com"]
mesaj["Subject"]="Smtp mail gönderimi"
yazi="""
...
"""
mesaj_gövdesi=MIMEText(yazi,"plain")
mesaj.attach(mesaj_gövdesi)
try:
    mail= smtplib.SMTP("smtp.gmail.com",587)
    mail.ehlo()
    mail.starttls()
    mail.login("...@gmail.com","...")
    mail.sendmail(mesaj["From"],alıcı,mesaj.as_string())
    print("mail gönderildi")
    mail.close()
except:
    sys.stderr.write("hata!!!")
    sys.stderr.flush()
