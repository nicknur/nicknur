tanımlı_kullanıcı= "kaçık"
tanımlı_parola="1234"
while True:
  kullanıcı_adı= input("kullanıcı adınızı giriniz: ")
  parola= input("parolanızı giriniz: ")
  if (kullanıcı_adı==tanımlı_kullanıcı) and (parola==tanımlı_parola):
    print("hoşeldin paşam nerelerdeydinn...")
    break
  elif (kullanıcı_adı!=tanımlı_kullanıcı) and (parola==tanımlı_parola):
    print("kullanıcı adını kontrol edip tekrar dene")
  elif (kullanıcı_adı==tanımlı_kullanıcı) and (parola!=tanımlı_parola):
    print("şifreni yenilemek ister misin?")
    cevap=input("evet/hayır")
    if cevap=="evet":
      yeni_parola=input("yeni parola: ")
      tanımlı_parola=yeni_parola
      print("parolanız başarıyla değiştirildi.")
